@model BlogMundiPagg.Repository.Entities.Post
@{
    ViewBag.Title = "Blog Mundi Pagg";
}

<div class="container">

    <div class="row">

        <!-- Blog Post Content Column -->
        <div class="col-lg-8">

            <!-- Title -->
            <h1>@Html.DisplayFor(model => model.Titulo)</h1>

            <!-- Author -->
            <p class="lead">
                by <a href="#">@Html.DisplayFor(model => model.Usuario.Nome)</a>
            </p>

            <hr>

            <!-- Date/Time -->
            <p><span class="glyphicon glyphicon-time"></span>@Html.DisplayFor(model => model.DataCadastro)</p>

            <hr>

            <!-- Preview Image -->
            <img class="img-responsive" src="http://placehold.it/900x300" alt="">

            <hr>

            <!-- Post Content -->
            <p>@Html.DisplayFor(model => model.Corpo)</p>

            <hr>
        </div>

        <!-- Blog Sidebar Widgets Column -->
        <div class="col-md-4">
            <div class="well">
                <h4>Posts</h4>
                <a href="#">@Html.Action("ListarPosts")</a>

            </div>
        </div>
    </div>

</div>


